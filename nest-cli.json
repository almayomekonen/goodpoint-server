{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "plugins": ["@nestjs/swagger"],
        "assets": [
            {
                "include": "../static/",
                "outDir": "dist/static",
                "watchAssets": true
            },
            {
                "include": "../public/",
                "outDir": "dist/public",
                "watchAssets": true
            }
        ],
        "watchAssets": true
    }
}
